@page "/PrivacyStatement"
@using ADefHelpDeskApp.Controllers
@using AdefHelpDeskBase.Models
@inherits OwningComponentBase<ApplicationSettingsController>

<br />
@((MarkupString)ApplicationSetting.privacyStatement)

@code {
    public DTOApplicationSetting ApplicationSetting = new DTOApplicationSetting();

    protected override async Task OnInitializedAsync()
    {
        ApplicationSetting = await Task.Run(() => @Service.GetPrivacyStatement());
    }
}