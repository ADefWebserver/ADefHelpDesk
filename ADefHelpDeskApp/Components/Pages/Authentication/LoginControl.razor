@page "/logincontrol"
<h4>Login</h4>
<AuthorizeView>
    <NotAuthorized>
        <form method="post" action="LogIn">
            <table class="form-group" cellpadding="4" cellspacing="4">
                <tbody>
                    <tr>
                        <td>
                            <label for="Title" class="control-label" style="font-weight: bold">Username: </label>
                        </td>
                        <td>
                            <input type="text" name="Email" class="form-control" @bind="Username" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Title" class="control-label" style="font-weight: bold">Password: </label>
                        </td>
                        <td>
                            <input type="password" name="Password" class="form-control" @bind="Password" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Title" class="control-label" style="font-weight: bold">Remember Me: </label>
                        </td>
                        <td>
                            <input type="checkbox" name="RememberMe" value="@RememberMe">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button type="submit" class="btn btn-success">Log In</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </NotAuthorized>
</AuthorizeView>

@code {
    string Username = "";
    string Password = "";
    string RememberMe = "on";
}
