<div class="container">
    <div class="row">
        <div class="col-md-6 text-left">
            <RadzenLabel Text=@Copyright></RadzenLabel>
        </div>
        <div class="col-md-6 text-right">
            <RadzenLink Path="TermsOfUse" Text="Terms Of Use" />  |  <RadzenLink Path="PrivacyStatement" Text="Privacy Statement" />
        </div>
    </div>
</div>
@code {
    string Copyright = "";
    protected override async Task OnInitializedAsync()
    {
        await Task.Run(() => Copyright = $"Copyright © {DateTime.Now.Year}");
    }
}