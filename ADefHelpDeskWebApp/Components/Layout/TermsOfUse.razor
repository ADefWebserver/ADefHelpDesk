@page "/TermsOfUse"
@using ADefHelpDeskWebApp.Controllers
@using AdefHelpDeskBase.Models
@inherits OwningComponentBase<ApplicationSettingsController>

<br />
@((MarkupString)ApplicationSetting.termsOfUse)

@code {
    public DTOApplicationSetting ApplicationSetting = new DTOApplicationSetting();

    protected override async Task OnInitializedAsync()
    {
        ApplicationSetting = await Task.Run(() => @Service.GetTermsOfUse());
    }
}